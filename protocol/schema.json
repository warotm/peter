{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Psychological Emotive Tactics Emergency Response Report v3.0",
  "description": "An integrated analysis linking participant data with communication tactics, patterns, and psychological drivers.",
  "type": "object",
  "required": [
    "participants",
    "incidentAnalysis",
    "messageAnalysis"
  ],
  "properties": {
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "formalRole",
          "participantAnalysis"
        ],
        "properties": {
          "name": { "type": "string" },
          "formalRole": { "type": "string" },
          "participantAnalysis": {
            "type": "object",
            "required": [
              "behavioralPatterns",
              "impact",
              "inferredDrivers",
              "individualRecommendations"
            ],
            "properties": {
              "behavioralPatterns": { "type": "string" },
              "impact": { "type": "string" },
              "inferredDrivers": {
                "type": "array",
                "description": "A synthesized list of the primary psychological drivers motivating this participant's behavior.",
                "items": { "type": "string" }
              },
              "individualRecommendations": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "incidentAnalysis": {
      "type": "object",
      "required": [
        "executiveSummary",
        "keyInsights",
        "organizationalRisks",
        "organizationalRecommendations"
      ],
      "properties": {
        "executiveSummary": { "type": "string" },
        "keyInsights": { "type": "array", "items": { "type": "string" } },
        "organizationalRisks": { "type": "array", "items": { "type": "string" } },
        "organizationalRecommendations": { "type": "array", "items": { "type": "string" } },
        "identifiedPatterns": {
          "type": "array",
          "description": "Descriptions of multi-tactic conversational patterns observed during the incident.",
          "items": {
            "type": "object",
            "properties": {
              "patternName": { "type": "string" },
              "description": { "type": "string" },
              "messageIDs": { "type": "array", "items": { "type": "integer" } }
            }
          }
        }
      }
    },
    "messageAnalysis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "messageID",
          "speaker",
          "message",
          "identifiedTactics"
        ],
        "properties": {
          "messageID": { "type": "integer" },
          "speaker": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "message": { "type": "string" },
          "identifiedTactics": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "quote",
                "tacticName",
                "tacticCategory",
                "speaker",
                "target",
                "purpose",
                "likelyDriver",
                "impactScore",
                "confidenceScore"
              ],
              "properties": {
                "quote": { "type": "string" },
                "tacticName": { "type": "string" },
                "tacticCategory": { "type": "string" },
                "speaker": { "type": "string" },
                "target": { "type": "array", "items": { "type": "string" } },
                "purpose": {
                  "type": "string",
                  "description": "An integrated description of the tactic's goal and its intended impact on the target."
                },
                "likelyDriver": {
                  "type": "string",
                  "description": "The most probable psychological driver from the library that motivates the tactic."
                },
                "impactScore": { "type": "number", "minimum": -1.0, "maximum": 1.0 },
                "confidenceScore": { "type": "number", "minimum": 0, "maximum": 1 }
              }
            }
          }
        }
      }
    }
  }
}