{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Psychological Emotive Tactics Emergency Response Report v2.0",
  "description": "An integrated analysis linking participant data with communication tactics.",
  "type": "object",
  "required": [
    "participants",
    "incidentAnalysis",
    "messageAnalysis"
  ],
  "properties": {
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "formalRole",
          "participantAnalysis"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "formalRole": {
            "type": "string"
          },
          "participantAnalysis": {
            "type": "object",
            "required": [
              "behavioralPatterns",
              "impact",
              "individualRecommendations"
            ],
            "properties": {
              "behavioralPatterns": {
                "type": "string"
              },
              "impact": {
                "type": "string"
              },
              "individualRecommendations": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "incidentAnalysis": {
      "type": "object",
      "required": [
        "executiveSummary",
        "keyInsights",
        "organizationalRisks",
        "organizationalRecommendations"
      ],
      "properties": {
        "executiveSummary": {
          "type": "string"
        },
        "keyInsights": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "organizationalRisks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "organizationalRecommendations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "messageAnalysis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "messageID",
          "speaker",
          "message",
          "identifiedTactics"
        ],
        "properties": {
          "messageID": {
            "type": "integer"
          },
          "speaker": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the message, if available in the source data."
          },
          "message": {
            "type": "string"
          },
          "identifiedTactics": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "quote",
                "tacticName",
                "tacticCategory",
                "speaker",
                "target",
                "likelyGoal",
                "intendedImpact",
                "impactScore",
                "confidenceScore"
              ],
              "properties": {
                "quote": {
                  "type": "string"
                },
                "tacticName": {
                  "type": "string"
                },
                "tacticCategory": {
                  "type": "string",
                  "description": "The broad category of the tactic (e.g., 'Aggressive & Controlling')."
                },
                "speaker": {
                  "type": "string"
                },
                "target": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "The name(s) of the participant(s) at whom the tactic is directed."
                },
                "likelyGoal": {
                  "type": "string"
                },
                "intendedImpact": {
                  "type": "string"
                },
                "impactScore": {
                  "type": "number",
                  "minimum": -1.0,
                  "maximum": 1.0
                },
                "confidenceScore": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          }
        }
      }
    }
  }
}